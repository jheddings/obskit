{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",

        "module": "CommonJS",
        "target": "ES2020",
        "moduleResolution": "node",
        "types": [],

        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,

        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,

        "strict": true,
        "jsx": "react-jsx",
        "isolatedModules": true,
        "moduleDetection": "force",
        "skipLibCheck": true
    },
    "exclude": ["tmp/**/*", "node_modules/**/*", "dist/**/*", "plugin/**/*"]
}
