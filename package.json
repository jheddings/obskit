{
    "name": "obskit",
    "version": "1.1.2",
    "description": "Utilities and helpers for building Obsidian plugins.",
    "keywords": [
        "obsidian"
    ],
    "homepage": "https://github.com/jheddings/obskit#readme",
    "bugs": {
        "url": "https://github.com/jheddings/obskit/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jheddings/obskit.git"
    },
    "license": "MIT",
    "author": "jheddings",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "prepare": "husky",
        "build": "tsc",
        "dev": "tsc --watch",
        "clean": "rm -rf dist",
        "prepublishOnly": "npm run clean && npm run build",
        "test": "npm run build",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "preflight": "npm run format && npm run lint:fix && npm test",
        "release": "npm run preflight && git push && git push --tags",
        "postversion": "git commit --amend -m \"obskit-$npm_package_version\""
    },
    "dependencies": {
        "obsidian": "^1.8.7"
    },
    "devDependencies": {
        "@types/node": "^24.3.0",
        "@typescript-eslint/eslint-plugin": "^8.40.0",
        "@typescript-eslint/parser": "^8.40.0",
        "eslint": "^9.33.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.5",
        "prettier": "^3.6.2",
        "typescript": "^5.9.2"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,json,css,scss,md}": [
            "prettier --check",
            "eslint"
        ]
    }
}
